extends ../layouts/common.pug

block content
  h1 
    span.mr-3 Users
    a.btn.btn-primary(href="/users/create") Create New User
  .d-flex.align-items-center
    form.ml-auto(action="/users/search", method="GET", class="d-flex md-6")
      input.mr-2(type="text", name="q", class="form-control")
      button(class="btn btn-success") Search
  table.table
    tr
      th Name
      th Phone
      th Actions
    each val in users
      tr
        td= val.name
        td= val.phone
        td
          a.btn.btn-light(href="/users/" + val.id) View